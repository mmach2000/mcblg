---
import { PostsPage } from '@/components/react/PostsPage';
import { IS_DEV } from '@/utils/constants';

import { getAllTags, getMetadata, getTopRoute } from '@/utils/content';
import StarlightPage from '@astrojs/starlight/components/StarlightPage.astro';
import { getCollection } from 'astro:content';

const allNotes = (await getCollection('docs' as const, ({ slug, data }) => getTopRoute(slug) === '/notes' && (IS_DEV || !data.draft)));
const tags = getAllTags(allNotes);
const trimmedPosts = await Promise.all(allNotes.map(getMetadata));

const frontmatter = {
  title: 'NOTES',
  tableOfContents: false,
  noFooter: true,
};
---

<StarlightPage frontmatter={frontmatter} hasSidebar={false}>
  <PostsPage tags={tags} posts={trimmedPosts} client:only="react" />
</StarlightPage>
